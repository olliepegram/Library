<div class="col-md-offset-3 col-md-6">
<h1>Hello, <%= current_user.first_name %></h1>
<h2>Here are your books:</h2>
</div>
</br>
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <% @books.each do |book| %>
        <div class="panel panel-default">
            <div class="panel-body">
                <p>
                    <%= image_tag(book.picture_url(:thumbnail), :width => "100%") %>
                </p>
                <p>
                    <strong>Book title
                    </strong><%= book.title %>
                </p>
                <p>
                    <strong>Written by</strong>
                    <%= book.author %>
                </p>
                <p>
                    <strong>Read by</strong>
                    <%= book.user.first_name %>
                </p>
                <p>
                    <%= rating_for book, 'review', star: 5, enable_half: true %>
                </p>
            </div>
        </div>
        <% end %>
    </div>
</div>
