<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= current_user.first_name if current_user %>
<%= link_to 'New Book', new_book_path if user_signed_in? %></br>
<div class="row">
<div class="col-md-offset-3 col-md-6">
    <% @books.each do |book| %>
    <div class="panel panel-default">
        <div class="panel-body">
            <p>
                <%= image_tag(book.picture_url(:thumbnail), :width => "100%") %>
            </p>
            <p>
                <strong>Book title
                </strong><%= book.title %>
            </p>
            <p>
                <strong>Written by</strong>
                <%= book.author %>
            </p>
            <p>
                <strong>Read by</strong>
                <%= book.user.first_name if current_user %>
            </p>
            <p>
                <%= rating_for book, 'review', star: 5, enable_half: true %>
            </p>
            <p>
                <%= pluralize(book.rates("review").count, "review") %>
            </p>
        </br>
        <%= link_to 'Show', book %>
        <%= link_to 'Edit', edit_book_path(book) %>
        <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
</div>
<% end %>
</div>
</div>

<br>
