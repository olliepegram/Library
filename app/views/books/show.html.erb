<p id="notice"><%= notice %></p>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>
                    <%= image_tag(@book.picture_url(:thumbnail), :width => "100%") %>
                </p>

                <p>
                    <strong>Title:</strong>
                    <%= @book.title %>
                </p>

                <p>
                    <strong>Author:</strong>
                    <%= @book.author %>
                </p>

                <p>
                    <strong>User:</strong>
                    <%= @book.user.first_name if current_user %>
                </p>

                <p>
                    <strong>Review</strong>
                    <%= rating_for @book, 'review', star: 5, enable_half: true, disable_after_rate: true %>
                </p>

                <%= link_to 'Edit', edit_book_path(@book) %>
                |
                <%= link_to 'Back', books_path %>

                <h2>Add a comment:</h2>
                <%= form_for([@book, @book.comments.build]) do |f| %>
                <div class="form-group">
                    <p>
                        <%= f.label :body %><br>
                        <%= f.text_area :body, class: "form-control" %>
                    </p>
                    <p>
                        <%= f.submit %>
                    </p>
                </div>
                <% end %>

            </div>
        </div>
    </div>

    <% @book.comments.each do |comment| %>
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>
                    <strong>Commenter:</strong>
                    <%= comment.user%>
                </p>

                <p>
                    <strong>Comment:</strong>
                    <%= comment.body %>
                </p>
                <p>
                    <%= link_to 'Destroy', [comment.book, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
                </p>
            </div>
        </div>
    </div>
    <% end %>
</div>
